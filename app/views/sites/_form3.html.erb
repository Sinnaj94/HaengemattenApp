<%= form_with(model: @site) do |f| %>
<%#= form_for @site, remote: true, "data-type" => :json do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control" %>
  <%= f.label :description %>
  <%= f.text_field :description, class: "form-control" %>
  <%= f.label :longitude %>
  <%= f.text_field :longitude, class: "form-control" %>
  <%= f.label :latitude %>
  <%= f.text_field :latitude, class: "form-control" %>
  <%= f.label :size_ids %>
  <%= f.select :size_ids, Size.all.collect {|x| [x.name, x.id]}, {include_blank: false, include_hidden: false}, :multiple => true, class: "form-control"%>

  <%= f.submit "Update Site", :class => 'btn btn-primary' %>
<% end %>
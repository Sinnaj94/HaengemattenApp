<div class="main-sidebar">
  <div class="sidebar">
    <form class="sidebar-form">
      <div class="input-group">
        <fieldset class="filter-fieldset">
          <input class="form-control" placeholder="Search..." type="text" id="search-input" autocomplete="off"/>
        </fieldset>
      </div>
      <ul class="sidebar-menu" id="search-results"></ul>
    </form>
  </div>
</div>

<div class="sidebar-toggle-div">
<!-- Sidebar toggle button-->
  <button class="sidebar-toggle" data-toggle="push-menu" aria-menu="seitliche Leiste aus- und einblenden">
	<i class="fa fa-caret-left"></i> <i class="fa fa-caret-right"></i>
  </button>
</div>

<div id="map" class ="ol-map">
  <%if notice %>
  <p id="notice" class="ol-notice"><%= notice %></p>
  <%end %>
</div>

<div style="display: none;">
  <div id="popup" class="ol-popup">
    <a href="#" id="popup-closer" class="ol-popup-closer"></a>
    <div id="popup-content">
    </div>
  </div>
</div>

<%= render 'map', site: @site %>

<div style="display: none; height: 0;">
	<%= render 'form2', site: @site %>
  <%= render 'reviews/form', review: @review %>
</div>


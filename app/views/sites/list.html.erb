
 
  <h2>Sites</h2>
  <% if can? :create, Site  %>
	  <div class="well">
		<%= link_to "New Site", new_site_path, remote: true, class: "btn btn-primary" %>
	  </div>
  <% end %>
 
  <table id="search-results" class="table table-bordered table-striped">
    <thead>
    <tr>
      <th>Name</th>
	  <th>Mean Rating</th>
	  <th>Description</th>
	  <th># Images</th>
      <th colspan="3">Actions</th>
    </tr>
    </thead>
    <tbody id="sites">
	  <% @sites.each do |site| %>
	  <tr>
		<td><%= site.name %></td>
		<td><%= site.meanrating %></td>
		<td><%= site.description %></td>
		<td>
			<% if site.images.attached? %>
				<%= site.images.size %>
			<% end %>
		</td>
		<td><%= link_to '<i class="fa fa-search"></i>'.html_safe, site %></td>
        <td><%= link_to '<i class="fas fas-pencil"></i>'.html_safe, edit_site_path(site) if can? :update, site %></td>
        <td><%= link_to '<i class="fas fas-trash"></i>'.html_safe, site, method: :delete, data: { confirm: 'Are you sure?' } if can? :destroy, site %></td>
	  </tr>
	  <% end %>
    </tbody>
  </table>
 
  <%#= render 'dialog' %>

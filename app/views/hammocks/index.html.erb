<div class="jumbotron text-center">
	<h1>Listing hammocks</h1>
</div>

<div class="container">
  <div class="row">
<%= link_to '<i class="fa fa-plus"></i> New hammock'.html_safe, new_hammock_path %> 
</div>
<div class="row">
<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
	<th>Longitude</th>
	<th>Latitude</th>
    <th></th>
  </tr>
 
  <% @hammocks.each do |hammock| %>
    <tr>
      <td><%= hammock.name %></td>
      <td><%= hammock.description %></td>
	  <td><%= hammock.longitude %></td>
	  <td><%= hammock.latitude %></td>
      <td><%= link_to '<i class="fa fa-search"></i>'.html_safe, hammock_path(hammock) %></td>
	  <td><%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_hammock_path(hammock) %></td>
	  <td><%= link_to '<i class="fa fa-trash"></i>'.html_safe, hammock_path(hammock),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
  </div>
</div>
<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @size.name %>
</p>
<p>
  <strong>Text:</strong>
  <%= @size.text %>
</p>

<%= link_to 'Edit', edit_size_path(@size), class: 'btn btn-primary' if can? :update, Size %>
<%= link_to 'Delete', @size, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } if can? :destroy, Size %>
<%= link_to 'Back', sizes_path, class: 'btn btn-default'%>

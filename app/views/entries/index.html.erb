<p id="notice"><%= notice %></p>

<h1>Entries</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Longitude</th>
      <th>Latitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td><%= entry.name %></td>
        <td><%= entry.description %></td>
        <td><%= entry.longitude %></td>
        <td><%= entry.latitude %></td>
        <td><%= link_to '<i class="fa fa-search"></i>'.html_safe, entry %></td>
        <td><%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_entry_path(entry) %></td>
        <td><%= link_to '<i class="fa fa-trash"></i>'.html_safe, entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Entry', new_entry_path %>

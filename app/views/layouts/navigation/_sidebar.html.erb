<div class="main-sidebar">
  <div class="sidebar">
    <% if current_user %>
    <div class="user-panel">
      <div class="pull-left image">
        <img alt="User Image" class="user-image" src="http://placehold.it/160x160" />
      </div>
      <div class="pull-left info">
        <p>
          <a href="mailto:<%= current_user.email %>"><%= current_user.first_name %> <%= current_user.last_name %></a>
        </p>
        <a href="#">
          <i class="fa fa-circle text-success">
          </i>Online
        </a>
      </div>
    </div>
	<% end %>
    <form action="#" class="sidebar-form" method="get">
      <div class="input-group">
        <input class="form-control" name="q" placeholder="Search..." type="text" id="search-input" autocomplete="off"/>
        <span class="input-group-btn">
        <button class="btn btn-flat" id="search-btn" name="search" type="submit" >
        <i class="fa fa-search">
        </i></button></span>
      </div>
      <ul class="sidebar-menu" id="search-results">

      </ul>
    </form>
  </div>
</div>
<li id="review_<%= review.id %>">
	<span class="review-details review-rating">
		<% review.rating.to_i.times do %><span class="glyphicon glyphicon-star text-warning"></span><% end %>
		<% (5 - review.rating.to_i).times do %><span class="glyphicon glyphicon-star-empty text-muted"></span><% end %>
	</span>
	<span class="review-details review-comment"><%= review.comment %></span>
	<span class="review-details review-user"><%= review.user.first_name %></span>
	<span class="review-details review-actions">
		<%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_review_path(review), remote: true if can? :update, Review  %>
		<%= link_to '<i class="fa fa-trash"></i>'.html_safe, review, remote: true, method: :delete, data: {confirm: "Delete Comment: #{review.comment}"} if can? :destroy, Review %>
	</span>
</li>